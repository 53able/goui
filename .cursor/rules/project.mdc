export const useUserStore = create<UserStore>()(
  devtools(
    (set, get) => ({
      users: [],
      isLoading: false,
      getUsers: () => get().users,
      addUser: (item) => {
        const newUser = { ...item, id: crypto.randomUUID(), createdAt: new Date() };
