import type { User, CreateUser } from '@/shared/schemas';

interface UserStore {
  users: User[];
  isLoading: boolean;
  getUsers: () => User[];
  addUser: (user: CreateUser) => void;
  updateUser: (id: string, updates: Partial<User>) => void;
  deleteUser: (id: string) => void;
